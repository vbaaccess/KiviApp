                source: "images/dices100.png"
                pos: self.parent.pos
                size: self.parent.size
                keep_ratio: True
                allow_stretch: True

    BoxLayout:
        canvas.before:
            BorderImage:
                # BorderImage behaves like the CSS BorderImage
                border: 10, 10, 10, 10
                source: 'dices.png'
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        Label:
            text: "Roll dice"
            font_size: 110
            color: 0.23, 0.24, 0.35, 1
        Label:
            id: random_label
            text: "-"
            font_size: 254
        Label:
            text: ""
            font_size: 64