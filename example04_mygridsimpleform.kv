<MyGrid>:

    name: name          # Global variable name references the id name
    lastName: lastName  # Global variable email references the id lastName
    email: email        # Global variable email references the id email

    GridLayout:
        cols:1
        size: root.width - 100, root.height -100
        pos: 50, 50

        GridLayout:
            cols:2

            Label:
                text: "Name: "

            TextInput:
                id: name
                multinline:False
            Label:
                text: "Last name: "

            TextInput:
                id: lastName
                multinline:False

            Label:
                text: "Email: "

            TextInput:
                id: email
                multiline:False

        Button:
            text:"Submit"
            on_press: root.btn()