<MyRoot>:

    random_label: random_label

    BoxLayout:
        size_hint: (None, None)
        width: 100
        height: self.parent.height
        orientation: "vertical"
        spacing: 5
        padding: 5

        Button:
            on_press: root.generate_number(4)
            size_hint: (None, None)
            width: self.parent.width
            Image:
                source: "images/dices004.png"
                pos: self.parent.pos
                size: self.parent.size
                keep_ratio: True
                allow_stretch: True

        Button:
            on_press: root.generate_number(6)
            size_hint: (None, None)
            width: self.parent.width
            Image:
                source: "images/dices006.png"
